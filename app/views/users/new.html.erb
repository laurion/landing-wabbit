<section id="home">
<div class="container">
    <div class="row">
        <div id="homescreen" class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
             <div id="logo"><a href="#home"><img class="wabbit-logo" src="images/logo.png" alt="logo"></a></div>
             <div id="slogan"><h1>Connect with the people you've crossed paths with.</h1></div>
             <a href="#features_3" class="cta1" id="button_more">Learn More</a>
             <a href="#" class="cta2" id="button_download">Download Now</a>
             <div id="play-button">
               <a href="https://www.youtube.com/watch?v=Lgz7QzV5oJ0&autoplay=1" id="playvideo" class="hero-container__play-btn">Play video</a>
             </div>
        </div> <div class="clearfix"></div>
    </div>
</div>
<div id="video_pattern"></div>
<div id="video-fallback"></div>
