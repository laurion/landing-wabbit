<section id="footer">
    <div class="container">
        <div class="row" id="newsletter">
            <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3" >

                <h2>Be the first to know</h2>
                <p>We'll slowly roll out the iOS version and create hotspots in other areas.
                </p>

                <div id="newsletter_form">
                    <p class="byline brandon">Be the first to know</p>
                    <%= form_for @user, :url => { :action => "create" } do |f| %>
                        <%= f.text_field :email, :placeholder => "Enter your e-mail address...", :class => "subscribe-input", :name => "email" %>
                        <button type="submit" class="subscribe-submit">Get access</button>
                    <% end %>
                </div>
                <div id="preview"></div>

            </div>
        </div>

       <div class="row">
           <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1" id="share">

               <div id="social_icons">
                   <ul>
                       <li><svg viewBox="0 0 32 32" id="fb_icon" onclick="location.href='https://facebook.com/wabbitmessenger'"><use xlink:href="#facebook"></use></svg></li>
                       <li><svg viewBox="0 0 32 32" id="tw_icon" onclick="location.href='https://twitter.com/wabbitapp''"><use xlink:href="#twitter"></use></svg></li>
                   </ul>
               </div>

               <p>Copyright &copy; 2014 Wabbit</p>

           </div>
       </div>

    </div>
</section>

